/**
 * App styles 
**/

body, html 
  width 100%
  height 100%
  margin 0
  padding 0
  font-family Arial, sans-serif

.flex-container
  display flex
  width 100%
  height 100%
  justify-content center
  align-items center

.flex-container-col
  flex-direction column

.flex-container-list
  display flex
  width 100%
  height 100%
  flex-direction column
  justify-content flex-start
  align-items flex-start
  
  .item
    padding 20px
    width 100%
    font-size 2rem
    border-bottom: 1px #333 solid
  
  .item:not(:first-child)
    margin-top 1px  